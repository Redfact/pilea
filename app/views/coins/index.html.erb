<% @coins.each do |coin| %>
<div class="flex bg-white text-gray-700 shadow-lg rounded-lg mx-auto my-3 w-10/12">
  <div class="flex items-start my-auto px-8 py-4">
    <img class="w-16 h-16 rounded-full object-cover mr-8 shadow" src="<%= coin.logo %>" alt="Logo <%= coin.name %>">
    <p class="text-2xl my-auto mr-8"><%= coin.symbol %></p>
    <svg fill="none" viewBox="0 0 24 24"  class="my-auto w-8 h-8 mr-1" stroke="currentColor">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4.318 6.318a4.5 4.5 0 000 6.364L12 20.364l7.682-7.682a4.5 4.5 0 00-6.364-6.364L12 7.636l-1.318-1.318a4.5 4.5 0 00-6.364 0z"/>
    </svg>
  </div>
</div>
<% end %>
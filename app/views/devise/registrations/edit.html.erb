<div class="max-w-xl bg-white shadow-md rounded px-8 pt-6 pb-8 mt-4 mx-auto">

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <p class="text-center text-gray-700 text-lg font-bold mb-6">MODIFIER MES INFORMATIONS</p>

  <div class="mb-6">
  <%= f.label :Adresse_Email, class: "block text-gray-700 text-sm font-bold mb-2" %>
  <%= f.email_field :email, autofocus: true, class: "shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:border-green-300 outline-none", autofocus: true, placeholder: "example@email.com" %>
  </div>

  <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
    <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
  <% end %>

  <div class="mb-6">
    <%= f.label :Mot_de_passe_actuel, class: "block text-gray-700 text-sm font-bold mb-2" %> <i class="italic text-gray-500">(Nous avons besoin de votre mot de passe actuel pour valider vos modifications)</i><br />
    <%= f.password_field :current_password, class: "shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 mb-3 leading-tight focus:border-green-300 outline-none", autocomplete: "Mot de passe actuel" %>
  </div>

  <div class="mb-6">
  <%= f.label :Mot_de_passe, class: "block text-gray-700 text-sm font-bold mb-2" %> <i class="italic text-gray-500">(Laisser vide si vous ne voulez pas changer de mot de passe)</i><br />
    <%= f.password_field :password, class: "shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 mb-3 leading-tight focus:border-green-300 outline-none", placeholder: "Nouveau mot de passe" %>
    <% if @minimum_password_length %>
      <br />
      <em class="italic text-gray-500">(<%= @minimum_password_length %> caractères minimum)</em>
    <% end %>
  </div>

  <div class="mb-6">
    <%= f.label :Confirmer_le_mot_de_passe, class: "block text-gray-700 text-sm font-bold mb-2" %>
    <%= f.password_field :password_confirmation, class: "shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 mb-3 leading-tight focus:border-green-300 outline-none", autocomplete: "Nouveau mot de passe" %>
  </div>

  <div class="flex justify-center">
    <%= f.submit "Valider", class: "bg-green-500 hover:bg-green-700 text-white font-bold py-2 px-4 rounded border-none outline-none" %>
    <%= link_to "Retour", :back, class: "bg-gray-500 hover:bg-gray-700 text-white font-bold py-2 px-4 ml-2 rounded border-none outline-none" %>
  </div>

<% end %>

  <div class="flex justify-center">
    <%= button_to "Supprimer mon compte", registration_path(resource_name), class: "bg-red-500 hover:bg-red-700 text-white font-bold py-2 px-4 mt-4 rounded border-none outline-none", data: { confirm: "Êtes-vous sûr ?" }, method: :delete %></p>
  </div>

</div>

